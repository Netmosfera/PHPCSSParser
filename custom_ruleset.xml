<?xml version="1.0"?>
<ruleset
    name="Doctrine"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <description>Netmosfera Coding Standard</description>

    <rule ref="NetmosferaSniffs.Files.EnforceMaxLineLength">
        <properties>
            <property name="maxLength" type="int" value="90"/>
        </properties>
    </rule>

    <rule ref="Generic.Arrays.ArrayIndent"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <NOPE ref="Generic.Arrays.DisallowShortArraySyntax"/>
    <rule ref="Generic.Classes.DuplicateClassName"/>
    <NOPE ref="Generic.Classes.OpeningBraceSameLine"/>
    <NOPE ref="Generic.CodeAnalysis.AssignmentInCondition"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement">
        <exclude name="Generic.CodeAnalysis.EmptyStatement.DetectedCatch"/>
    </rule>
    <rule ref="Generic.CodeAnalysis.ForLoopShouldBeWhileLoop"/>
    <rule ref="Generic.CodeAnalysis.ForLoopWithTestFunctionCall"/>
    <rule ref="Generic.CodeAnalysis.JumbledIncrementer"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    <NOPE ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>
    <rule ref="Generic.CodeAnalysis.UselessOverridingMethod"/>
    <NOPE ref="Generic.Commenting.DocComment"/>
    <NOPE ref="Generic.Commenting.Fixme"/>
    <NOPE ref="Generic.Commenting.Todo"/>
    <rule ref="Generic.ControlStructures.InlineControlStructure"/>
    <NOPE ref="Generic.Debug.*"/>
    <rule ref="Generic.Files.ByteOrderMark"/>
    <rule ref="Generic.Files.EndFileNewline"/>
    <rule ref="Generic.Files.InlineHTML"/>
    <rule ref="Generic.Files.LineEndings"/>
    <NOPE ref="Generic.Files.LineLength"/>
    <NOPE ref="Generic.Files.LowercasedFilename"/>
    <rule ref="Generic.Files.OneClassPerFile"/>
    <rule ref="Generic.Files.OneInterfacePerFile"/>
    <rule ref="Generic.Files.OneObjectStructurePerFile"/>
    <rule ref="Generic.Files.OneTraitPerFile"/>
    <rule ref="Generic.Formatting.DisallowMultipleStatements"/>
    <NOPE ref="Generic.Formatting.MultipleStatementAlignment"/>
    <rule ref="Generic.Formatting.NoSpaceAfterCast"/>
    <NOPE ref="Generic.Formatting.SpaceAfterCast"/>
    <NOPE ref="Generic.Formatting.SpaceAfterNot"/>
    <rule ref="Generic.Functions.CallTimePassByReference"/>
    <rule ref="Generic.Functions.FunctionCallArgumentSpacing"/>
    <NOPE ref="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
    <NOPE ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>
    <NOPE ref="Generic.Metrics.CyclomaticComplexity"/>
    <rule ref="Generic.Metrics.NestingLevel">
        <properties>
            <property name="nestingLevel" type="int" value="3"/>
            <property name="absoluteNestingLevel" type="int" value="5"/>
        </properties>
    </rule>
    <NOPE ref="Generic.NamingConventions.CamelCapsFunctionName"/>
    <rule ref="Generic.NamingConventions.ConstructorName"/>
    <rule ref="Generic.NamingConventions.UpperCaseConstantName"/>
    <rule ref="Generic.PHP.BacktickOperator"/>
    <rule ref="Generic.PHP.CharacterBeforePHPOpeningTag"/>
    <NOPE ref="Generic.PHP.ClosingPHPTag"/>
    <rule ref="Generic.PHP.DeprecatedFunctions"/>
    <rule ref="Generic.PHP.DisallowAlternativePHPTags"/>
    <rule ref="Generic.PHP.DisallowShortOpenTag"/>
    <rule ref="Generic.PHP.DiscourageGoto"/>
    <rule ref="Generic.PHP.ForbiddenFunctions"/>
    <NOPE ref="Generic.PHP.LowerCaseConstant"/>
    <rule ref="Generic.PHP.LowerCaseKeyword"/>
    <NOPE ref="Generic.PHP.LowerCaseType"/>
    <rule ref="Generic.PHP.NoSilencedErrors"/>
    <rule ref="Generic.PHP.SAPIUsage"/>
    <NOPE ref="Generic.PHP.Syntax"/><!-- SLOW, otherwise OK -->
    <rule ref="Generic.PHP.UpperCaseConstant"/>
    <NOPE ref="Generic.Strings.UnnecessaryStringConcat"/><!-- fails @ continuation -->
    <NOPE ref="Generic.VersionControl.SubversionProperties"/>
    <NOPE ref="Generic.Whitespace.ArbitraryParenthesesSpacing"/>
    <NOPE ref="Generic.Whitespace.DisallowSpaceIndent"/>
    <rule ref="Generic.Whitespace.DisallowTabIndent"/>
    <NOPE ref="Generic.Whitespace.LanguageConstructSpacing"/>
    <rule ref="Generic.Whitespace.ScopeIndent"/>
    <NOPE ref="Generic.Whitespace.LanguageConstructSpacing"/>
</ruleset>
